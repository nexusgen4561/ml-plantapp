{
  "version": 2,
  "builds": [
    { 
      "src": "api/app.py", 
      "use": "@vercel/python",
      "config": { "runtime": "python3.11" } 
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "api/app.py"
    }
  ]
}